<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.taloslogy.playolapp.views.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_userDetails"
            app:destination="@id/userDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.taloslogy.playolapp.views.UserDetailFragment"
        android:label="fragment_user_detail"
        tools:layout="@layout/fragment_user_detail" >
        <action
            android:id="@+id/action_userDetailFragment_to_activationFragment"
            app:destination="@id/activationFragment" />
        <action
            android:id="@+id/action_activateCode"
            app:destination="@id/activationFragment" />
    </fragment>
    <fragment
        android:id="@+id/activationFragment"
        android:name="com.taloslogy.playolapp.views.ActivationFragment"
        android:label="fragment_activation"
        tools:layout="@layout/fragment_activation">

        <action android:id="@+id/action_loginComplete"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="false" />

    </fragment>
</navigation>