<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RevisionYearFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/revLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/revision_img"
            android:scaleType="fitCenter"
            android:contentDescription="@string/cool_image_button" />

        <TextView
            android:text="@string/revision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="45sp"
            android:fontFamily="@font/next_art_bold"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/revYears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

</FrameLayout>